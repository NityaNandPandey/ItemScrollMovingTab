<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LL_Sp_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/margin_10">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        android:backgroundTint="@color/colorWhite"
        app:cardCornerRadius="@dimen/margin_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_serviceprdChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:weightSum="10">


                <ImageView
                    android:id="@+id/img_serviceprdChild"
                    android:layout_width="@dimen/margin_90dp"
                    android:layout_height="@dimen/margin_90dp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_weight=".1"
                    android:scaleType="fitXY"
                    android:src="@drawable/loading" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="9.9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_serviceprdChild"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:text="###"
                        android:textColor="@color/black" />


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_serviceDate_serviceprdChild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:text=""
                        android:textColor="@color/purple_200" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/paymentLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_servicePrice_"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="vxvxcv"
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="xvxcv"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:id="@+id/tv_problem_discount_display"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="xvxcvx"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/small_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cb_selectedPrbLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <CheckBox
                        android:id="@+id/cb_selectedPrb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:button="@drawable/check" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/spaceAddLL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        android:orientation="vertical"
        android:visibility="visible" />

</LinearLayout>
